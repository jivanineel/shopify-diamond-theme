<section
  class="customer-review"
  style="padding: {{ section.settings.padding-top }}px 0 {{ section.settings.padding-bottom }}px 0; background: {{ section.settings.background-color }}"
>
  <div class="main-container">
    <h2 class="section-title" style="margin-bottom: {{ section.settings.title-margin-bottom }}px">
      {{ section.settings.section_title }}
    </h2>
    <div class="customer-review-list">
      {% for block in section.blocks %}
        <div class="customer-card">
          <h5 class="review-title">
            {{ block.settings.review_title }}
          </h5>
          <p class="review-text">
            {{ block.settings.review_text }}
          </p>
          <div
            class="reviewer-info"
            style="display: {{ block.settings.direction-info }}; justify-content: flex-start; align-items: center; gap: {{ block.settings.info_gap }}px"
          >
            {% if block.settings['reviewer-image'] %}
              <img
                src="{{ block.settings.reviewer-image | image_url: width: 100 }}"
                alt="{{ block.settings.reviewer-image }}"
                width="50"
                height="50"
                class="reviwer-profile"
              >
              <div class="review-details">
                <p class="reviewer-name">{{ block.settings.reviewer_name }}</p>
                <p class="reviewer-location">{{ block.settings.reviewer_location }}</p>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "top-engagement-rings",
  "settings": [
    {
      "type": "range",
      "label": "padding-top",
      "id": "padding-top",
      "max": 100,
      "min": 0,
      "default": 0,
      "step": 1
    },
    {
      "type": "range",
      "label": "padding-bottom",
      "id": "padding-bottom",
      "max": 100,
      "min": 0,
      "default": 0,
      "step": 1
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "Background color"
    },
    { "type": "text", "id": "section_title", "label": "Section Title" },
    {
      "type": "range",
      "id": "title-margin-bottom",
      "label": "Title margin bottom",
      "max": 100,
      "min": 0,
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "Customer-card",
      "name": "customer-review-card",
      "settings": [
        {
          "type": "text",
          "id": "review_title",
          "label": "Review Title"
        },
        {
          "type": "text",
          "id": "review_text",
          "label": "Review Text"
        },
        {
          "type": "select",
          "id": "direction-info",
          "label": "Display Direction",
          "options": [
            {
              "label": "Horizontal",
              "value": "flex"
            },
            {
              "label": "Vertical",
              "value": "flex-none"
            }
          ]
        },
        {
          "type": "range",
          "id": "info_gap",
          "label": "Gap",
          "min": 0,
          "max": 100,
          "default": 0
        },
        {
          "type": "image_picker",
          "id": "reviewer-image",
          "label": "Reviewer Image"
        },
        {
          "type": "text",
          "id": "reviewer_name",
          "label": "Reviewer Name"
        },
        {
          "type": "text",
          "id": "reviewer_location",
          "label": "Reviewer Location"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "customer-review-card",
      "blocks": [
        {
          "type": "Customer-card"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .customer-review .customer-review-list {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    justify-content: center;
    gap: 30px;
  }

  .customer-review .customer-review-list .customer-card {
    padding: 30px;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px 0 #b0bec53d;
    display: flex;
    flex-direction: column;
  }

  .customer-review .review-title {
    font-size: 20px;
    line-height: 150%;
    font-weight: 400;
    color: #364554;
    max-width: 80%;
  }

  .customer-review .review-text {
    font-size: 16px;
    line-height: 150%;
    color: #364554;
    margin: 20px 0;
  }

  .customer-review .reviewer-name {
    font-size: 14px;
    line-height: 100%;
    font-weight: 700;
    color: #364554;
    margin-bottom: 4px;
  }
  .customer-review .reviewer-location {
    font-size: 12px;
    line-height: 100%;
    color: #364554;
  }

  .reviewer-info {
    margin-top: auto;
  }

  @media (max-width: 991px) {
    .customer-review .customer-review-list {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 767px) {
    .customer-review .review-title {
        font-size: 18px;
    }
    .customer-review .customer-review-list {
      grid-template-columns: 1fr;
    }

    .customer-review .customer-review-list .customer-card{
        padding: 20px;
    }
  }

  @media (max-width: 575px) {
    .customer-review .customer-review-list{
        gap: 16px;
    }

    .customer-review .review-title {
        font-size: 16px;
    }

    .customer-review .review-text{
        font-size: 14px;
        margin: 10px 0;
    }

    .customer-review .customer-review-list .customer-card{
        padding: 16px;
    }
  }
{% endstylesheet %}
