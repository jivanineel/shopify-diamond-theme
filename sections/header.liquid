      "id": "font_family",
      "label": "Font Family",
      "default": "mono"
    }
  ],
  "blocks": [
    {
      "type": "navigation_link",
      "name": "Navigation Link",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Link Title"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        },
        {
          "type": "select",
          "id": "class_name",
          "label": "CSS Class Name",
          "options": [
            {
              "label": "Dropdown",
              "value": "dropdown"
            },
            {
              "label": "Nav link",
              "value": "nav-link"
            }
          ]
        },
        {
          "type": "text",
          "id": "link_id",
          "label": "Unique ID for Dropdown Matching"
        }
      ]
    },
    {
      "type": "header_search",
      "name": "Header Search",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "header_search"
        }
      ]
    },
    {
      "type": "dropdown",
      "name": "Dropdown Group",
      "settings": [
        {
          "type": "image_picker",
          "id": "menu_image",
          "label": "Attach Image"
        },
        {
          "type": "text",
          "id": "parent_id",
          "label": "Attach to Link ID"
        },
        {
          "type": "text",
          "id": "group_title",
          "label": "Group Title"
        },
        {
          "type": "textarea",
          "id": "group_items",
          "label": "Group Items (Comma Separated)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "navigation",
      "blocks": [
        { "type": "navigation_link" },
        { "type": "header_search" },
        {
          "type": "dropdown"
        }
      ]
    }
  ]
}
{% endschema %}
