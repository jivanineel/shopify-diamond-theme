<div class="footer">
  <div class="main-container">
    <div class="footer-link-groups">
      {% for block in section.blocks %}
        {% if block.type == 'footer_links' %}
          <div class="footer-links-group">
            <p class="footer-div-head">{{ block.settings.heading }}</p>
            <ul class="footer-links">
              {% assign current_group = block.settings.group_id %}
              {% for link_block in section.blocks %}
                {% if link_block.type == 'link'
                  and link_block.settings.group_id == current_group
                  and link_block.settings.label != blank
                %}
                  <li>
                    <a href="{{ link_block.settings.url }}" target="_blank">
                      {{ link_block.settings.label }}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
            {% if block.settings.footer_text != blank %}
              <div class="footer-signup">
                <p class="footer-text">
                  {{ block.settings.footer_text }}
                </p>
                <div class="signup-data" style="display: flex; ">
                  <input placeholder="Enter your Email" class="email-field">
                  <button class="btn-dark">SIGN UP</button>
                </div>
