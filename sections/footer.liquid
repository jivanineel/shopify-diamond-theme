                  </li>
                </ul>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    {% for logo in section.blocks %}
      {% if logo.settings['footer-logo'] %}
        <div
          class="footer-logo"
          style="justify-content: {{ logo.settings.left-right-align }}; align-items: {{ logo.settings.top-bottom-align }}; margin: {{ logo.settings.margin-top }}px 0 {{ logo.settings.margin-bottom }}px "
        >
          <img
            src="{{ logo.settings['footer-logo'] | image_url: width: 69 }}"
            alt="{{ logo.settings['footer-logo'] }}"
            class="image"
            width=""
            height=""
          >
        </div>
      {% endif %}
    {% endfor %}

    <div class="website-policy">
      <div class="all-reserved">
        {% for policy in section.blocks %}
          {% if policy.settings.policy_text %}
            <p class="policy-text">{{ policy.settings.policy_text }}</p>
          {% endif %}
        {% endfor %}
      </div>
      <div class="all-reserved">
        {% for policy_links in section.blocks %}
          {% if policy_links.settings.policy_link %}
            <a class="policy-links">{{ policy_links.settings.policy_link }}</a>
          {% endif %}
        {% endfor %}
      </div>
      <div class="payments-app">
        {% for payments in section.blocks %}
          {% if payments.settings['payments-app'] %}
            <a class="payments">
              <img
                src="{{ payments.settings['payments-app'] | image_url: width: 69 }}"
                alt="{{ payments.settings['payments-app'] }}"
                class="payment-app"
                width=""
                height=""
              >
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "range",
      "label": "padding-top",
      "id": "padding-top",
      "max": 100,
      "min": 0,
      "default": 0,
      "step": 1
    },
    {
      "type": "range",
      "label": "padding-bottom",
      "id": "padding-bottom",
      "max": 100,
      "min": 0,
      "default": 0,
      "step": 1
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "Background color"
    },
    {
      "type": "font_picker",
      "id": "font_family",
      "label": "Font Family",
      "default": "sans-serif"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font color"
    }
  ],
  "blocks": [
    {
      "type": "footer_links",
      "name": "Footer Links Group",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "group_id",
          "label": "Group ID (e.g., group1)",
          "info": "Use the same ID in link blocks to associate them with this group."
        },
        {
          "type": "text",
          "id": "footer_text",
          "label": "footer-text"
        }
      ]
    },
    {
      "type": "link",
      "name": "Footer Link",
      "limit": 50,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Link Label"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "group_id",
          "label": "Parent Group ID",
          "info": "Must match the group ID of a footer_links block."
        }
      ]
    },
    {
      "type": "logo",
      "name": "Footer logo",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "label": "Footer Logo",
          "id": "footer-logo"
        },
        {
          "type": "number",
          "label": "Margin Top",
          "id": "margin-top"
        },
        {
          "type": "number",
          "label": "Margin Bottom",
          "id": "margin-bottom"
        },
        {
          "type": "select",
          "label": "Logo Align",
          "id": "left-right-align",
          "options": [
            {
              "value": "flex-start",
              "label": "left"
            },
            {
              "value": "center",
              "label": "center"
            },
            {
              "value": "flex-end",
              "label": "Right"
            }
          ]
        },
        {
          "type": "select",
          "label": "Logo Align",
          "id": "top-bottom-align",
          "options": [
            {
              "value": "flex-start",
              "label": "top"
            },
            {
              "value": "center",
              "label": "center"
            },
            {
              "value": "flex-end",
              "label": "bottom"
            }
          ]
        }
      ]
    },
    {
      "type": "policy",
      "name": "Policy Text",
      "settings": [
        {
          "type": "text",
          "label": "Policy Text",
          "id": "policy_text"
        }
      ]
    },
    {
      "type": "policy_links",
      "name": "Policy Link",
      "settings": [
        {
          "type": "text",
          "label": "Policy Link",
          "id": "policy_link"
        }
      ]
    },
    {
      "type": "payments",
      "name": "payments App",
      "settings": [
        {
          "type": "image_picker",
          "label": "Payments App",
          "id": "payments-app"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Footer",
      "category": "Footer",
      "blocks": []
    }
  ]
}
{% endschema %}

<style>
  .footer{
    padding: {{ section.settings.padding-top }}px 0 {{ section.settings.padding-bottom }}px;
    background: {{ section.settings.background-color }};
    color: {{ section.settings.font_color }};
    font-family: {{ section.settings.font_family.family  }};
  }
  .footer-links a{
    color: {{ section.settings.font_color }};
    font-family: 'Satoshi', sans-serif;
    font-size: 14px;
  }

  .footer-logo {
    display: flex;
  }
</style>

{% stylesheet %}
  .footer .main-container {
    width: auto;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer-links a {
    text-decoration: none;
  }

  .footer-link-groups {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 80px;
  }

  .footer-links-group {
    max-width: 140px;
    width: 100%;
  }

  .footer-links-group:last-child {
    max-width: 407px;
    width: 100%;
  }

  .footer-links-group .footer-links {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer-div-head {
    font-size: 18px;
    margin-bottom: 26px;
  }

  .footer-links a:hover {
    text-decoration: underline;
  }

  .footer-signup {
    max-width: 407px;
    width: 100%;
  }

  .signup-data {
    margin: 26px 0 37px;
  }

  .footer-signup .btn-dark {
    background: #aa4239;
    border: 1px solid #aa4239;
    border-radius: 0 55px 55px 0;
    font-size: 14px;
    padding: 15px 24px;
    white-space: nowrap;
  }
  .email-field {
    max-width: 287px;
    width: 100%;
    font-size: 14px;
    color: #1a0902;
    border-radius: 55px 0 0 55px;
    outline: none;
    border: none;
    padding: 15px 24px;
  }

  .social-media {
    display: flex;
    gap: 30px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-logo {
    width: 100%;
  }

  .social-media svg {
    width: 24px;
  }
  .social-media svg path {
    fill: #ffeee7;
  }

  .website-policy {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1219px;
    width: 100%;
    margin: 0 auto;
  }

  .policy-text {
    font-size: 14px;
    font-family: 'Satoshi', sans-serif;
  }

  .payments-app {
    display: flex;
    gap: 10px;
  }

  .policy-links {
    font-size: 14px;
    font-family: 'Satoshi', sans-serif;
  }

  .footer-text {
    font-size: 14px;
    font-family: 'Satoshi', sans-serif;
  }

  @media (max-width: 991px) {
    .website-policy {
      flex-direction: column;
      gap: 20px;
    }

    .policy-text{
      text-align: center; 
    }
  }

  @media (max-width: 767px) {
    .footer{
      padding: 40px 0 20px !important;
    }

    .footer-link-groups {
      gap: 40px;
    }

    .footer-logo {
      margin: 20px 0 !important;
    }

    .footer-logo img {
      max-width: 50px;
    }
  }

  @media (max-width: 575px) {
    .footer{
      padding: 20px 0 !important;
    }

    .footer-link-groups {
      gap: 20px;
      justify-content: flex-start;
    }

    .footer-link-group:last-child {
      width: 100%;
    }

    .website-policy{
      gap: 10px;
    }

    .signup-data {
      margin: 16px 0 20px !important;
    }

    .footer-signup .btn-dark {
      font-size: 12px;
      padding: 10px 6px;
    }

    .email-field {
      font-size: 12px;
      padding: 10px 16px;
    }

    .footer-links a {
      font-size: 12px !important;
    }

    .footer-div-head{
      margin-bottom: 16px !important;
    }

    .footer-text{
      font-size: 12px !important;
    }
  }
{% endstylesheet %}
