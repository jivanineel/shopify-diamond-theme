<section
  class="shopping-jewellery"
  style=""
>
  <div class="main-container">
    {% if section.settings.section_title != blank %}
      <div class="heading">
        <h2 class="section-title" style="margin-bottom: {{ section.settings.title-margin-bottom }}px">
          {{ section.settings.section_title }}
        </h2>
        <p class="section-sub-title" style="margin-bottom: {{ section.settings.sub-margin-bottom }}px">
          {{ section.settings.section_sub_title }}
        </p>
      </div>
    {% endif %}
    <div class="jewellery-diamond">
      {% for block in section.blocks %}
        <div class="shopping-card {{ section.settings.gift-class }}">
          {% if block.settings['background-image'] %}
            <img
              src="{{ block.settings.background-image | image_url: width: 1000 }}"
              alt="{{ block.settings.background-image }}"
              width=""
              height=""
              class="card-background"
            >
          {% endif %}
          <div class="card-content">
            <h5>{{ block.settings['content-text'] }}</h5>
            {% if block.settings['shopping-button'] != blank %}
              <button>Shop</button>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "jewellery-design",
  "settings": [
    {
      "type": "range",
      "label": "padding-top",
      "id": "padding-top",
      "max": 100,
      "min": 0,
      "default": 0,
      "step": 1
    },
    {
      "type": "range",
      "label": "padding-bottom",
      "id": "padding-bottom",
      "max": 100,
      "min": 0,
      "default": 0,
      "step": 1
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "Background color"
    },
    {
      "type": "select",
      "id": "gift-class",
      "label": "gift class",
      "options": [
        {
          "value": "gift-card",
          "label": "gift-card"
        },
        {
          "value": "gift-card-remove",
          "label": "gift-none"
        }
      ]
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title"
    },
    {
      "type": "range",
      "id": "title-margin-bottom",
      "label": "Title margin bottom",
      "max": 100,
      "min": 0,
      "default": 0
    },
    {
      "type": "text",
      "id": "section_sub_title",
      "label": "Section Sub Title"
    },
    {
      "type": "range",
      "id": "sub-margin-bottom",
      "label": "Title margin bottom",
      "max": 100,
      "min": 0,
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "jewellery_card",
      "name": "Shopping-card",
      "settings": [
        {
          "type": "image_picker",
          "label": "Shoping Card Image",
          "id": "background-image"
        },
        {
          "type": "text",
          "label": "Shoping Content Text",
          "id": "content-text"
        },
        {
          "type": "text",
          "label": "Shoping Button Label",
          "id": "shopping-button"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "jewellery-design",
      "blocks": [
        {
          "type": "jewellery_card"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .shopping-jewellery{
    padding: {{ section.settings.padding-top }}px 0 {{ section.settings.padding-bottom }}px 0;
    background: {{ section.settings.background-color }}
  }

  .section_title{
    margin-bottom: {{ section.settings.title-margin-bottom }}px
  }
  .section_sub_title{
    margin-bottom: {{ section.settings.sub-margin-bottom }}px
  }
</style>

{% stylesheet %}
  .shopping-card {
    position: relative;
    height: 590px;
    transition: all 0.5s ease-in-out;
    overflow: hidden;
    border-radius: 10px;
  }

  .shopping-card.gift-card {
    height: auto;
  }

  .jewellery-diamond {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 30px;
  }

  .shopping-card:hover .card-background {
    transform: scale(1.05);
  }

  .card-background {
    width: 100%;
    height: 100%;
    transition: all 0.5s ease-in-out;
  }

  .card-content {
    position: absolute;
    left: 0;
    bottom: 40px;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    gap: 30px;
  }

  .card-content h5 {
    font-size: 22px;
    line-height: 100%;
    color: #fff;
    font-weight: 700;
  }

  .card-content button {
    color: #faf5ef;
    font-size: 16px;
    padding: 15px 30px;
    background: #1a0902;
    outline: none;
    border: 1px solid #1a0902;
    border-radius: 55px;
  }

  @media (max-width: 991px) {
    .shopping-card {
      width: 48%;
      height: 400px;
    }
  }

  @media (max-width: 767px) {
    .jewellery-diamond {
      gap: 10px;
    }

    .shopping-jewellery {
      padding: 50px 0 !important;
    }
  }

  @media (max-width: 575px) {
    .shopping-card {
      height: 345px;
    }

    .card-content {
      gap: 15px;
      padding-bottom: 10px;
    }

    .card-content button {
      padding: 10px 16px;
      font-size: 14px;
    }

    .card-content {
      font-size: 18px;
    }

    .shopping-jewellery {
      padding: 16px 0 40px !important;
    }
  }

  @media (max-width: 425px) {
    .shopping-card {
      width: 100%;
    }
  }
{% endstylesheet %}
